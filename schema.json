{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "talks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "titulo": {
            "type": "string"
          },
          "palestrantes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string"
                },
                "link": {
                  "type": "string"
                },
                "img": {
                  "type": "string"
                }
              },
              "required": [
                "nome",
                "link",
                "img"
              ]
            }
          },
          "publico": {
            "type": "string",
            "enum": ["iniciante", "intermediário", "avançado"]
          },
          "descricao": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "formato": {
            "type": "string",
            "enum": ["conversa", "slides", "debate", "live-code"]
          },
          "duracao": {
            "type": "integer"
          },
          "inicio": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "titulo",
          "palestrantes",
          "publico",
          "descricao",
          "tags",
          "formato",
          "duracao",
          "inicio",
          "url"
        ]
      }
    }
  },
  "required": [
    "talks"
  ]
}
